{
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npx astro:*)",
      "Bash(npx prettier:*)",
      "Bash(npm test)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "WebSearch",
      "Bash(git checkout:*)",
      "Bash(npm run test:unit:*)",
      "Bash(git fetch:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(npm run test:e2e:*)",
      "Bash(ls:*)",
      "Bash(git mv:*)",
      "Bash(git ls-tree:*)",
      "Bash(git rev-parse:*)",
      "Bash(git pull:*)",
      "Bash(gh run:*)",
      "Bash(npm test:*)",
      "Bash(npx playwright test:*)",
      "Bash(git cherry-pick:*)",
      "WebFetch(domain:www.linkedin.com)",
      "Bash(gh repo view:*)",
      "Bash(gh api:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run build && npm test",
            "statusMessage": "Running build and tests before commit..."
          }
        ]
      }
    ]
  }
}
